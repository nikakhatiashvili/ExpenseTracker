<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.expensetracker.presentation.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_tabsFragment"
            app:destination="@id/tabsFragment"
            app:enterAnim="@anim/slide_up"
            app:popExitAnim="@anim/slide_down"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/slide_up"
            app:popExitAnim="@anim/slide_down"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_signInFragment_to_exchangeRatesFragment"
            app:destination="@id/exchangeRatesFragment" />
    </fragment>

    <fragment
        android:id="@+id/exchangeRatesFragment"
        android:name="com.example.expensetracker.presentation.exchange_rates.ExchangeRatesFragment"
        android:label="exchange_rates_fragment"
        tools:layout="@layout/exchange_rates_fragment" />

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.expensetracker.presentation.signup.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/slide_up"
            app:popExitAnim="@anim/slide_down"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_signUpFragment_to_tabsFragment"
            app:destination="@id/tabsFragment"
            app:enterAnim="@anim/slide_up"
            app:popExitAnim="@anim/slide_down"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/tabsFragment"
        android:name="com.example.expensetracker.presentation.tabs.TabsFragment"
        android:label="fragment_tabs"
        tools:layout="@layout/fragment_tabs" >
        <action
            android:id="@+id/action_tabsFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.expensetracker.presentation.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />

</navigation>
